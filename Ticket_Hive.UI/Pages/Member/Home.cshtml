@page 
@model Ticket_Hive.UI.Pages.Member.HomeModel
@{
}

<!DOCTYPE html>
<html lang="en">
<head>

</head>
<body>
<h1 id="title">Search for your next event</h1>
    <div class="search">
        <form id="searchForm" method="get" asp-page="/Member/BookingPage">
            <input id="searchbar" type="text" name="search" placeholder="Keyword" />
            <button class="btn btn-primary" type="submit">Search</button>
        </form>        
        <a asp-page="./BookingPage" class="btn btn-primary">Show Events</a>
        <a asp-page="./ShoppingCartPage" class="btn btn-primary">Shopping Cart</a>
        <a asp-page="./ChangePassword" class="btn btn-primary">User Page</a>

        @if (Model.IsAdmin && User.Identity.IsAuthenticated)
        {
                    <a asp-page="/AppPages/Admin" class="btn btn-primary">Admin Page</a>
        }
        else
        {
                    <button class="btn btn-primary" disabled>Admin Page</button>
        }

        <form method="post" asp-page-handler="SignOut">
            <button class="btn btn-primary" type="submit">Sign Out</button>
        </form>
    </div>

    @if (Model.popularEvents != null)
    {
                <h1 class="popular-events">Most popular events:</h1>
                <div class="row movie-list">
            @foreach (var eventToDisplay in Model.popularEvents)
            {         
                                <div class="image-container">
                                    <h3>@eventToDisplay.Name</h3>                         
                                    <a class="btn btn-primary" asp-page="Evenemang" asp-route-id="@eventToDisplay.Id">Read more</a>
                                </div>
            }
                </div>
    }

    @if (Model.RecommendedEvents != null && Model.RecommendedEvents.Any())
    {
                <h1 class="recommended-events">Recommended events:</h1>
                <div class="row movie-list">
            @foreach (var eventToDisplay in Model.RecommendedEvents)
            {
                                <div class="image-container">
                                    <h3>@eventToDisplay.Name</h3>
                                    <a class="btn btn-primary" asp-page="Evenemang" asp-route-id="@eventToDisplay.Id">Read more</a>
                                </div>
            }
                </div>
    }

    @if (Model.eventsBought != null && Model.eventsBought.Any())
    {
            <h1 class="booked-events">Your booked events:</h1>
            <div class="row movie-list">
            @foreach (var eventToDisplay in Model.eventsBought)
            {
                            <div class="image-container">
                                <h3>@eventToDisplay.Name</h3>
                                <a class="btn btn-primary" asp-page="Evenemang" asp-route-id="@eventToDisplay.Id">Read more</a>
                            </div>
            }
            </div>
    }

    <script>
            document.addEventListener('DOMContentLoaded', function() {
                const searchbar = document.getElementById('searchbar');
                const searchForm = document.getElementById('searchForm');

                searchForm.addEventListener('submit', function(e) {
                    if (searchbar.value.trim() === '') {
                        e.preventDefault();
                    }
                });
            });
        </script>
    </div>
</body>
</html>