        <br />
        <h3 class="p-1" >Below Is A Confirmation Of Your Booking</h3>
        <hr />


</div>

<div class="container">
    @foreach (var ev in Model.Events)
    {
        <p>Location: @ev.Location</p>
        <p>Price: @ev.Price</p>
